@model IEnumerable<ICUScore.Web.Models.PvPViewModel>


@{
    ViewBag.Title = "Index";
}

<div class="jumbotron">
    <p>Current Scores</p>
</div>

<div class="container">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>PvP Stats</th>              
            </tr>
        </thead>

        <tbody>
            @foreach (var score in Model)
            {
                <tr>
                    <td>@score.WinnerName beat @score.OpponentName on @score.lastPlayedDate.ToShortDateString()</td>                      
                </tr>
            }
        </tbody>
    </table>
</div>